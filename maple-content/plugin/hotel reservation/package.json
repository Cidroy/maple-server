{
    "name": "Hotel Reservation",
    "version": "1.1",
    "description": "The simple and fast way for hotel Reservation",
    "author": "Rubixcode",
    "namespace": "rubixcode\/hotel",
    "Maple": {
        "ID": "1e2e05b9193c4430ab81a21f8a1ace19",
        "Active": false,
        "Name": "Hotel Reservation",
        "Path": "%ROOT%%PLG%hotel reservation",
        "Setup": {
            "Path": "setup\/index.php",
            "Backup": true,
            "Activate": "HRS::Activate",
            "Deactivate": "HRS::Deactivate"
        },
        "Autoload": {
            "HR": "class-reservation.php",
            "HRA": "class-reservation-admin.php"
        },
        "Shortcode": {
            "hotel": "HR::shortcode"
        },
        "app-route": [
            "route.json",
            "route-admin.json"
        ],
        "template": "template",
        "Filter": [],
        "Client": [],
        "Admin": {
            "Dashboard": [
                "HRA::dashboard"
            ],
            "Plugin": [
                {
                    "Bind": "hotel",
                    "Name": "Hotel",
                    "To": "HRA::home",
                    "icon": "rooms",
                    "Permission": "view-reservation-dashboard",
                    "More": [
                        {
                            "Bind": "rooms",
                            "Name": "Rooms",
                            "To": "HRA::rooms_page",
                            "Permission": "view-rooms-types"
                        },
                        {
                            "Bind": "reservations",
                            "Name": "Reservations",
                            "To": "HRA::reservations_page",
                            "Permission": "view-reservations"
                        },
                        {
                            "Bind": "clients",
                            "Name": "Client",
                            "To": "HRA::client_page",
                            "Permission": "view-client"
                        },
                        {
                            "Bind": "rates",
                            "Name": "Rates",
                            "To": "HRA::rate_page",
                            "Permission": "view-rates NOT GOOD"
                        },
                        {
                            "Bind": "reserve",
                            "Name": "Reserve",
                            "To": "HRA::reserve_home",
                            "Permission": "reserve-room"
                        }
                    ]
                }
            ]
        }
    },
    "AJAX": {
        "htl_add_category": {
            "function": "HRA::insert_category",
            "permission": "hotel-add-category"
        },
        "checkout_client": {
            "function": "HRA::checkout_client",
            "permission": "hotel-checkout"
        },
        "htl_add_room": {
            "function": "HRA::insert_room",
            "permission": "hotel-add-room"
        },
        "htl_reserve_admin": {
            "function": "HRA::admin_reserve_room",
            "permission": "hotel-admin-reserve"
        },
        "htl_delete_room": {
            "function": "HRA::admin_delete_room",
            "permission": "hotel-delete-room"
        },
        "htl_cancel_reservation": {
            "function": "HRA::admin_cancel_reservatin",
            "permission": "hotel-delete-reservation"
        },
        "htl_add_reservation": "HR::add_reservation",
        "insert_rates": "HRA::insert_rates",
        "update_transaction": "HRA::update_transaction",
        "cancel_reservation": "HRA::cancel_reservation"
    }
}
